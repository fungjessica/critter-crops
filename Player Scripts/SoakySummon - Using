using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Tilemaps;


public class SoakySummon : MonoBehaviour
{
    public float speed = 0.5f;
    public float stoppingDistance = 1.0f; // Distance within which Soaky will stop walking
    public Animator animator;

    private bool moveToTarget = false;
    private Vector3 targetPosition;

    public float cooldownTime = 2.0f;  // Cooldown time in seconds
    private float cooldownTimer = 0.0f;

    public PlantGrowth plantGrowth; // Reference to the PlantGrowth script

    void Update()
    {
        if (moveToTarget)
        {
            float distanceToTarget = Vector2.Distance(transform.position, targetPosition);
            if (distanceToTarget > stoppingDistance)
            {
                transform.position = Vector2.MoveTowards(transform.position, targetPosition, speed * Time.deltaTime);
                animator.SetBool("isWalking", true);
            }
            else
            {
                StopMoving();
            }
        }

        if (cooldownTimer > 0.0f)
        {
            cooldownTimer -= Time.deltaTime;
            if (cooldownTimer <= 0.0f)
            {
                animator.SetBool("isIdle", true);
                animator.SetBool("isShaking", false);
            }
        }
    }

    public void MoveToPosition(Vector3 position)
    {
        // Reset animation state
        animator.SetBool("isWalking", false);
        animator.SetBool("isShaking", false);
        animator.SetBool("isIdle", false);

        moveToTarget = true;
        targetPosition = position;
    }

    void StopMoving()
    {
        moveToTarget = false;
        animator.SetBool("isWalking", false);
        animator.SetBool("isShaking", true);
        cooldownTimer = cooldownTime;

        // Check if the target position is over a hole, then reduce growth time
        Vector3Int cellPosition = plantGrowth.tilemap.WorldToCell(targetPosition);
        TileBase tilemapB = plantGrowth.tilemap.GetTile(cellPosition);

        if (tilemapB == plantGrowth.plantTile)
        {
            plantGrowth.ReduceGrowthTime();
        }
    }
}
