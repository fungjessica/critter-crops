using UnityEngine;
using UnityEngine.Tilemaps;

public class TileInteract : MonoBehaviour
{
    public Tilemap tilemap;
    public TileBase targetTile;
    //public Soaky soaky;  // Reference to the Soaky script

    public SoakySummon soakySummon;

    void Update()
    {
        if (Input.GetMouseButtonDown(1))  // Right mouse button clicked
        {
            Vector3 mouseWorldPos = Camera.main.ScreenToWorldPoint(Input.mousePosition);
            Vector3Int cellPosition = tilemap.WorldToCell(mouseWorldPos);

            TileBase clickedTile = tilemap.GetTile(cellPosition);
            if (clickedTile == targetTile)
            {
                // Trigger Soaky to walk to the clicked tile
                //Vector3 targetPosition = tilemap.GetCellCenterWorld(cellPosition);
                //soaky.SetTargetPosition(targetPosition);
                Vector3 targetPosition = tilemap.GetCellCenterWorld(cellPosition);
                soakySummon.MoveToPosition(targetPosition);
            }
        }
    }
}
